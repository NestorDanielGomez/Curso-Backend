<div class="containerBody">
  <h1>REGISTRARSE</h1>
  <form
    class="form"
    action="/register"
    method="post"
    role="form"
    autocomplete="off"
  >
    <div class="form-group">
      <input
        id="nombre"
        name="nombre"
        placeholder="nombre"
        class="form-control"
        type="text"
        required
      />
    </div>
    <div class="mb-3 mt-3">
      <button class="btn btn-primary" type="submit">REGISTRARSE</button>
      <button
        class="btn btn-primary"
        onclick="location.href = '/login'"
      >VOLVER</button>
    </div>
  </form>
</div>